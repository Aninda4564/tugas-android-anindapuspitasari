        android:textStyle="bold"
        android:textColor="@color/text_primary_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Pertama Saya"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_primary_light"
        android:alpha="0.7" />

</LinearLayout>
