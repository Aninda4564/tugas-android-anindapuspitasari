<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <ImageView
        android:id="@+id/iv_materi_illustration"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/logo_aninda_app" />

    <TextView
        android:id="@+id/tv_materi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pertemuan 1"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_materi_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Deskripsi materi akan muncul di sini."
        android:textAlignment="center"
        android:textColor="@color/text_secondary_light"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_open_demo"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Buka Demo Aplikasi"
        android:textColor="@color/primary"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_menu_slideshow"
        app:iconTint="@color/primary" />

</LinearLayout>
