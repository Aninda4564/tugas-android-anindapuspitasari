<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_demo3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fungsi Button"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp"
        android:textColor="@color/text_primary_light" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tampilkan Pesan (Toast)"
        android:layout_marginBottom="12dp"
        app:cornerRadius="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_change_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ganti Warna Background"
        android:layout_marginBottom="12dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_exit_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keluar Demo"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/error" />

</LinearLayout>
